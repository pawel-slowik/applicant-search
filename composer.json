{
    "autoload": {
        "psr-4": {"Recruitment\\": "./src/"}
    },
    "autoload-dev": {
        "psr-4": {"Recruitment\\Test\\": "./tests/"}
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "cs": [
            "vendor/bin/phpcs -p --standard=phpcs.xml src tests",
            "vendor/bin/php-cs-fixer fix -v --dry-run"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpunit/phpunit": "^9.5"
    }
}
